# Telegram Bot Configuration
TG_TOKEN=your_telegram_bot_token_from_botfather
ADMIN_ID=your_telegram_id_number

# Database Configuration
# Для локальной разработки используйте SQLite:
# DATABASE_URL=sqlite:///dietolog.db

# Для продакшна рекомендуется PostgreSQL (например, Neon.tech):
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# AI API Keys
# GigaChat API для подсчета калорий
GIGACHAT_CLIENT_ID=your_gigachat_client_id
GIGACHAT_AUTH_KEY=your_gigachat_auth_key
GIGACHAT_ACCESS_TOKEN=your_gigachat_access_token

# Mistral AI для консультаций диетолога
MISTRAL_API_KEY=your_mistral_api_key

# CalorieNinjas API для поиска продуктов
CALORIE_NINJAS_API_KEY=your_calorie_ninjas_api_key

# Optional Settings
LOG_LEVEL=INFO
API_PORT=8000 